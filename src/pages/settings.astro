---
import ThemeOptions from "@components/ThemeOptions.astro";
import Layout from "@layouts/Layout.astro";
import { useTranslations } from "@i18n/utils";
import H2 from "@components/H2.astro";
import Breadcrumb from "@components/Breadcrumb.astro";

const translate = useTranslations(Astro.currentLocale!);
const settings = translate("settings");
---

<Layout titlePrefix={settings}>
  <Breadcrumb breadcrumbs={[{ name: settings }]} slot="breadcrumb" />
  <H2>
    {settings}
  </H2>
  <ThemeOptions />
</Layout>
