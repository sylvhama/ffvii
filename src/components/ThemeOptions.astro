---
import { useTranslations } from "@i18n/utils";

const translate = useTranslations(Astro.currentLocale);
---

<script>
  function check(selector: string) {
    const input = document.querySelector<HTMLInputElement>(selector);
    if (input) {
      input.checked = true;
    }
  }

  if (document.documentElement.classList.contains("dark")) {
    check('input[value="dark"]');
  } else if (document.documentElement.classList.contains("ff7")) {
    check('input[value="ff7"]');
  } else {
    check('input[value="light"]');
  }

  const toggleTheme = document.getElementById("toggle-theme");
  if (toggleTheme) {
    toggleTheme.querySelectorAll("input").forEach((input) => {
      input.addEventListener("change", (event) => {
        document.body.classList.add("duration-300");
        const target = event.target as HTMLInputElement;
        if (target.value === "dark") {
          localStorage.theme = "dark";
          document.documentElement.classList.add("dark");
          document.documentElement.classList.remove("ff7");
        } else {
          document.documentElement.classList.remove("dark");
          if (target.value === "ff7") {
            document.documentElement.classList.add("ff7");
            localStorage.theme = "ff7";
          } else {
            document.documentElement.classList.remove("ff7");
            localStorage.theme = "light";
          }
        }
      });
    });
  }
</script>

<fieldset id="toggle-theme">
  <legend class="sr-only">{translate("pickTheme")}</legend>
  <div class="grid grid-cols-3 gap-4">
    <label
      class="pointer w-full block border-2 border-black has-[:checked]:border-pink rounded-md p-2 bg-black text-white has-[:focus-visible]:ring-2 ring-offset-4 ring-white ring-offset-black"
    >
      <input
        class="outline-none accent-pink"
        name="theme"
        value="dark"
        type="radio"
      />
      <span class="font-bold">{translate("darkHeading")}</span>
      <span class="text-gray-400">{translate("darkSubHeading")}</span>
    </label>
    <label
      class="pointer w-full block border-2 border-white has-[:checked]:border-pink rounded-md p-2 bg-realWhite text-black has-[:focus-visible]:ring-2 ring-offset-4 ring-black ring-offset-white"
    >
      <input
        class="outline-none accent-pink"
        name="theme"
        value="light"
        type="radio"
      />
      <span class="font-bold">{translate("lightHeading")}</span>
      <span class="text-gray-500">{translate("lightSubHeading")}</span>
    </label>
    <label
      class="pointer w-full block border-2 border-realBlack has-[:checked]:border-ff7Pink rounded-md p-2 bg-ff7 text-white has-[:focus-visible]:ring-2 ring-offset-4 ring-white ring-offset-realBlack"
    >
      <input
        class="outline-none accent-ff7Pink"
        name="theme"
        value="ff7"
        type="radio"
      />
      <span class="font-bold">{translate("ff7Heading")}</span>
      <span class="text-gray-400">{translate("ff7SubHeading")}</span>
    </label>
  </div>
</fieldset>
