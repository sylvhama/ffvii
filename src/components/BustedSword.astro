---
import { Image } from "astro:assets";
import sword from "@assets/sword.png";
import { useTranslations } from "@i18n/utils";

const translate = useTranslations(Astro.currentLocale);
---

<div class="mt-8 pr-5 w-1/3 h-60 overflow-hidden text-right">
  <Image
    class="inline-block rotate-12"
    src={sword}
    alt={translate("swordAlt")}
    height={320}
  />
</div>
<hr class="mb-8 w-1/3 border-black opacity-50 dark:border-white" />
