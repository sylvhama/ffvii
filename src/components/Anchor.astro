---
import clsx from "clsx";

interface Props {
  href: string;
  classname?: string;
  lang?: string;
}

const { href, classname, ...restProps } = Astro.props;
---

<a
  class={clsx(
    "pointer font-mono",
    href &&
      "text-purple hover:text-pink hover:underline focus-visible:text-pink dark:text-blue dark:hover:text-pink dark:focus-visible:text-pink ff7:text-cyan hover:ff7:text-ff7Pink focus-visible:ff7:text-ff7Pink",
    href && "hover:underline focus-visible:underline",
    classname
  )}
  href={href}
  {...restProps}><slot /></a
>
