---
import clsx from "clsx";

interface Props {
  href: string;
  underline?: boolean;
  classname?: string;
}

const { href, underline = true, classname, ...restProps } = Astro.props;
---

<a
  class={clsx(
    href && "text-blue-600 dark:text-blue-500",
    underline &&
      href &&
      "underline hover:no-underline focus-visible:no-underline",
    classname
  )}
  href={href}
  {...restProps}><slot /></a
>
