---
import clsx from "clsx";

interface Props {
  href: string;
  classname?: string;
  lang?: string;
}

const { href, classname, ...restProps } = Astro.props;
---

<a
  class={clsx(
    "pointer font-mono",
    href &&
      "text-purple hover:text-pink active:text-pink active:underline hover:underline focus-visible:text-pink dark:text-blue dark:hover:text-pink dark:active:text-pink dark:focus-visible:text-pink ff7:text-cyan ff7:hover:text-ff7-pink ff7:active:text-ff7-pink ff7:focus-visible:text-ff7-pink",
    href && "hover:underline focus-visible:underline",
    classname
  )}
  href={href}
  {...restProps}><slot /></a
>
