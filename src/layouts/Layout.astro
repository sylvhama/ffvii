---
interface Props {
  breadcrumbs?: string[];
}

import { getRelativeLocaleUrl } from "astro:i18n";
import Anchor from "@components/Anchor.astro";
import { useTranslations, getOtherLocalePathname } from "@i18n/utils";
import Breadcrumb from "@components/Breadcrumb.astro";

const translate = useTranslations(Astro.currentLocale);
const title = translate("title");
const description = translate("description");
const isFrench = Astro.currentLocale === "fr";
const otherLocaleUrl = getOtherLocalePathname(isFrench, Astro.url.pathname);
const { breadcrumbs } = Astro.props;
---

<!doctype html>
<html lang={Astro.currentLocale}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    {isFrench ? <link rel="canonical" href={otherLocaleUrl} /> : null}
    <title>{title}</title>
    <meta name="description" content={description} />

    <meta name="twitter:image" content="https://ff7.rocks/share.png" />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:site" content="@sylvhama" />
    <meta name="twitter:card" content="summary" />

    <meta property="og:title" content={title} />
    <meta property="og:image" content="https://ff7.rocks/share.png" />
    <meta property="og:image:width" content="1254" />
    <meta property="og:image:height" content="665" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://ff7.rocks" />
    <meta property="og:description" content={description} />
    <meta property="og:locale" content={Astro.currentLocale} />
  </head>
  <body
    class="mx-auto max-w-[67.5rem] pt-8 bg-white px-4 dark:bg-black dark:text-white"
  >
    <main>
      <div class="pb-4 grid grid-cols-[1fr_auto_auto] items-center gap-4">
        <div>
          {breadcrumbs ? <Breadcrumb breadcrumbs={breadcrumbs} /> : null}
        </div>
        <Anchor href={otherLocaleUrl}>
          {translate("langLink")}
        </Anchor>
        <Anchor
          underline={false}
          href={getRelativeLocaleUrl(Astro.currentLocale || "en", "settings")}
          classname="hover:rotate-360 transition-transform duration-500"
          ><span
            title={translate("settings")}
            aria-label={translate("settings")}>⚙️</span
          ></Anchor
        >
      </div>

      <h1 class="pb-4 text-3xl font-bold">
        {title}
      </h1>

      <slot />

      <hr class="my-8 w-1/3 border-black opacity-50 dark:border-white" />

      <footer>
        {translate("madeBy")}
        <Anchor href={`https://shamann.${isFrench ? "fr" : "dev"}`}
          >Sylvain Hamann</Anchor
        >
      </footer>
    </main>
  </body>
</html>
