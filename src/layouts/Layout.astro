---
interface Props {
  titlePrefix?: string;
  description?: string;
  breadcrumbs?: { name: string; path?: string }[];
}

import { getRelativeLocaleUrl } from "astro:i18n";
import { ClientRouter } from "astro:transitions";

import Anchor from "@components/Anchor.astro";
import Breadcrumb from "@components/Breadcrumb.astro";
import BustedSword from "@components/BustedSword.astro";
import { useTranslations, getOtherLocalePathname } from "@i18n/utils";

import "./style.css";

const translate = useTranslations(Astro.currentLocale);
const isFrench = Astro.currentLocale === "fr";
const otherLocaleUrl = getOtherLocalePathname(isFrench, Astro.url.pathname);
const { titlePrefix, description: descriptionProp, breadcrumbs } = Astro.props;

const title = translate("title");
const titleMeta = titlePrefix ? `${titlePrefix} | ${title}` : title;
const description = descriptionProp || translate("description");
---

<!doctype html>
<html lang={Astro.currentLocale}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    {
      isFrench ? (
        <link rel="canonical" href={`https://ff7.rocks${otherLocaleUrl}`} />
      ) : null
    }
    <title>{titleMeta}</title>
    <meta name="description" content={description} />

    <meta name="twitter:image" content="https://ff7.rocks/share.png" />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:title" content={titleMeta} />
    <meta name="twitter:site" content="@sylvhama" />
    <meta name="twitter:card" content="summary" />

    <meta property="og:title" content={titleMeta} />
    <meta property="og:image" content="https://ff7.rocks/share.png" />
    <meta property="og:image:width" content="1254" />
    <meta property="og:image:height" content="665" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://ff7.rocks" />
    <meta property="og:description" content={description} />
    <meta property="og:locale" content={Astro.currentLocale} />
    <ClientRouter />
  </head>
  <body
    class="mx-auto max-w-[75rem] bg-realWhite md:p-4 dark:bg-black dark:text-white ff7:bg-realBlack ff7:text-white"
  >
    <script is:inline>
      function init() {
        if (
          localStorage.theme === "dark" ||
          (!("theme" in localStorage) &&
            window.matchMedia("(prefers-color-scheme: dark)").matches)
        ) {
          document.documentElement.classList.add("dark");
          document.documentElement.classList.remove("ff7");
        } else {
          document.documentElement.classList.remove("dark");
          if (localStorage.theme === "ff7") {
            document.documentElement.classList.add("ff7");
          }
        }
      }

      init();

      document.addEventListener("astro:after-swap", init);
    </script>
    <main
      class="md:grid grid-cols-[auto_1fr] gap-8 ff7:bg-ff7 px-4 ff7:rounded-md border-4 border-transparent ff7:border-realWhite"
    >
      <h1
        class="hidden md:block py-4 pr-4 vertical-text border-r text-xl font-bold font-mono relative before:absolute before:border-r before:h-6 before:-top-6 before:-right-[1px] before:hidden md:before:block after:absolute after:border-r after:h-6 after:-bottom-6 after:-right-[1px] after:hidden md:after:block ff7:before:hidden ff7:after:hidden"
      >
        {title}
      </h1>
      <div class="pt-4">
        <div
          class="pb-8 grid grid-cols-[minmax(0px,_1fr)_auto_auto] items-start gap-4"
        >
          <div>
            {breadcrumbs ? <Breadcrumb breadcrumbs={breadcrumbs} /> : null}
          </div>
          <Anchor href={otherLocaleUrl}>
            {translate("langLink")}
          </Anchor>
          <Anchor
            href={getRelativeLocaleUrl(Astro.currentLocale || "en", "settings")}
            classname="hover:no-underline focus-visible:no-underline"
            ><span
              title={translate("settings")}
              aria-label={translate("settings")}>⚙️</span
            ></Anchor
          >
        </div>

        <h1 class="block md:hidden pb-8 text-xl font-bold font-mono">
          {title}
        </h1>

        <slot />

        <BustedSword />

        <footer class="pb-2 flex flex-wrap gap-x-2 items-center">
          <p class="font-mono">
            {translate("madeBy")}
          </p>
          <Anchor href={`https://shamann.${isFrench ? "fr" : "dev"}`}
            >Sylvain Hamann</Anchor
          >
          <span class="font-mono" aria-hidden="true">|</span>
          <Anchor href="https://github.com/sylvhama/ffvii"
            >{translate("github")}</Anchor
          >
        </footer>
      </div>
    </main>
  </body>
</html>
